@page
@model IndexModel
@{
    ViewData["Title"] = "Lista de Tarefas";
}


<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="card-title mb-0">
                    <i class="bi bi-list-check"></i> Minhas Tarefas
                </h2>
            </div>
            <div class="card-body">
                <!-- Formulário para adicionar nova tarefa -->
                <form method="post" asp-page-handler="Create">
                    <div class="row g-2 mb-4">
                        <div class="col-md-5">
                            <input type="text" class="form-control" asp-for="NewTodo.Title" placeholder="Título da tarefa" required />
                            <span asp-validation-for="NewTodo.Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-5">
                            <input type="text" class="form-control" asp-for="NewTodo.Description" placeholder="Descrição (opcional)" />
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-plus-circle"></i> Adicionar
                            </button>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </form>

                <!-- Estatísticas -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="alert alert-info">
                            <h6 class="mb-0">
                                <i class="bi bi-card-list"></i> Total:
                                <span class="badge bg-primary">@Model.TodoItems.Count()</span>
                            </h6>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="alert alert-warning">
                            <h6 class="mb-0">
                                <i class="bi bi-hourglass-split"></i> Pendentes:
                                <span class="badge bg-warning text-dark">@Model.TodoItems.Count(x => !x.IsCompleted)</span>
                            </h6>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="alert alert-success">
                            <h6 class="mb-0">
                                <i class="bi bi-check-circle"></i> Concluídas:
                                <span class="badge bg-success">@Model.TodoItems.Count(x => x.IsCompleted)</span>
                            </h6>
                        </div>
                    </div>
                </div>

                <!-- Lista de tarefas -->
                @if (Model.TodoItems.Any())
                {
                    <div class="list-group">
                        @foreach (var item in Model.TodoItems)
                        {
                            <div class="list-group-item @(item.IsCompleted ? "bg-light" : "")">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center">
                                            <form method="post" asp-page-handler="ToggleComplete" asp-route-id="@item.Id" class="me-2">
                                                <button type="submit" class="btn btn-sm @(item.IsCompleted ? "btn-success" : "btn-outline-secondary")">
                                                    <i class="bi @(item.IsCompleted ? "bi-check-circle-fill" : "bi-circle")"></i>
                                                </button>
                                            </form>
                                            <div>
                                                <h6 class="mb-1 @(item.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                                    @item.Title
                                                </h6>
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    <p class="mb-1 small text-muted">@item.Description</p>
                                                }
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar"></i> Criado em: @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                                    @if (item.IsCompleted && item.CompletedAt.HasValue)
                                                    {
                                                        <br />
                                                        <i class="bi bi-check-circle"></i>

                                                        <span>Concluído em: </span>
                                                        @item.CompletedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                                            }
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Tem certeza que deseja excluir esta tarefa?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <h4 class="mt-3">Nenhuma tarefa encontrada</h4>
                        <p class="text-muted">Adicione uma nova tarefa para começar!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>