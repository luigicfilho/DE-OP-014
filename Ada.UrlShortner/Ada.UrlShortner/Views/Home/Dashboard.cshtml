@{
    ViewData["Title"] = "My URLs";
    Layout = "_Layout";
}

@if (!User.Identity!.IsAuthenticated)
{
    <div class="alert alert-warning">
        You must be logged in to view this page.
        <a href="/Account/Login" class="alert-link">Click here to login</a>.
    </div>
}
else
{
    <h2 class="mb-4">Your Shortened URLs</h2>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>Original URL</th>
                <th>Short Link</th>
                <th>Clicks</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            @if(ViewBag.UserUrls is not null)
            {
                @foreach (var url in (ViewBag.UserUrls as List<UrlRecord>)!)
                {
                    <tr>
                        <td><small>@url.OriginalUrl</small></td>
                        <td>
                            <a href="/@url.ShortCode" target="_blank">r.lcdev.com.br/@url.ShortCode</a>
                        </td>
                        <td>@url.ClickCount</td>
                        <td>@url.CreatedAt.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a href="/" class="btn btn-outline-primary">Shorten New URL</a>
    </div>
}